@model IEnumerable<GeneralCargoSystem.Models.GC.GCBooking>

@{
    ViewData["Title"] = "General Cargo Specific Bookings";

    var time = ViewBag.Time;
}
<style>
    .modal-dialog {
        overflow-y: initial !important
    }

    .modal-body {
        max-height: calc(100vh - 200px);
        overflow-y: auto;
    }

    #myTable {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        background-color: steelblue;
        border-radius: 12px;
        color:white;
    }

        #myTable th:first-child {
            border-top-left-radius: 12px;
        }

        #myTable th:last-child {
            border-top-right-radius: 12px;
        }

        /*        #myTable td, #myTable th {
                border: 1px solid #ddd;
                padding: 8px;
            }*/

        #myTable tr:hover {
            background-color: dodgerblue;
        }

        #myTable th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: deepskyblue;
            color: white;
        }
</style>

<center>
    <header>
        <h1>Specific Booking(s) ~ @time  </h1>
    </header>
</center>
<hr/>
<br />
<div class="content" id="sbooking">
    <div class="container-fluid">
        <div class="p-4 border rounded">
            @if (Model.Count() > 0)
            {
                <table class="table" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BookingReference)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                Booked Time
                            </th>
                            <th>
                                FPT Site
                            </th>
                            <th>
                                Logistical Transporter
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookingReference)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Time)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FPTSites.SiteLocation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LogisticalTransporter.Name)
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }
            else
            {
                <center> <h1><b>NO BOOKING(S) AT THIS PERIOD <i class="fa fa-triangle-exclamation"></i></b></h1></center>
                
            }

        </div>
    </div>
</div>

