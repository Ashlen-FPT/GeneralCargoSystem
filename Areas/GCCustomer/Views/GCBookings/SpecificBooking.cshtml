@model IEnumerable<GeneralCargoSystem.Models.GC.GCBooking>

@{
    ViewData["Title"] = "General Cargo Specific Bookings";

    var time = ViewBag.Time;
}
<style>

    .modal-dialog {
        overflow-y: initial !important
    }

    .modal-body {
        height: 80vh;
        overflow-y: auto;
    }
</style>
<center>
    <header>
        <h1>Specific Booking(s) ~ @time  </h1>
    </header>
</center>
<br />
<div class="content">
    <div class="container-fluid">
        <div class="p-4 border rounded">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BookingReference)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            Booked Time
                        </th>
                        <th>
                            FPT Site
                        </th>
                        <th>
                            Logistical Transporter
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BookingReference)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FPTSites.SiteLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LogisticalTransporter.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

