@model GeneralCargoSystem.Models.GC.Vessels

@{
    ViewData["Title"] = "Edit";
}

<h4>Update Vessel Information</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit" id="updateForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="VesselName" class="control-label"></label>
                <input asp-for="VesselName" class="form-control" />
                <span asp-validation-for="VesselName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="VesselNo" class="control-label"></label>
                <input asp-for="VesselNo" class="form-control" />
                <span asp-validation-for="VesselNo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="VoyageNo" class="control-label"></label>
                <input asp-for="VoyageNo" class="form-control" />
                <span asp-validation-for="VoyageNo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" type="checkbox" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top:10px; float:right;">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    $.validator.unobtrusive.parse("#updateForm");
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
