@model GeneralCargoSystem.Models.GC.Vessels

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.VesselName) :
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.VesselName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.VesselNo) :
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.VesselNo)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.VoyageNo) :
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.VoyageNo)
        </dd>
        <dt class="col-sm-4">
            Vessel Active :
        </dt>
        <dd class="col-sm-5">
            @if (Model.IsActive == true)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="float:right;" />
    </form>
</div>
